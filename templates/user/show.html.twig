{% extends 'admin/crud_base.thml.twig' %}

{% block title %} User {% endblock %}

{% block content %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}"><button class="btn btn-success">Back to list</button></a>

    <a href="{{ path('user_edit', {'id': user.id}) }}"><button class="btn btn-success">Edit</button></a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
