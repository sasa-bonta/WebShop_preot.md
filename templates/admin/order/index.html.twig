{% extends 'base.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}

    {% include 'admin/admin_header.html.twig' %}
    {% include 'admin/navbar_admin_orders.html.twig' %}

    <br>
    <h1 align="center">Order index</h1>
    <div class="container">

        <div class="row my-3">
            <div class="col-2">
            </div>
            <div class="col-8">
                <table class="table table-striped table-condensed">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>CreatedAt</th>
                        <th>Payment.type</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for order in orders %}
                        <tr>
                            <td>{{ order.id }}</td>
                            <td>{{ order.total | number_format(2) }}</td>
                            <td>{{ order.status }}</td>
                            <td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                            <td>{{ order.payment.type }}</td>
                            <td>
                                <a href="{{ path('order_show', {'id': order.id}) }}">
                                    <button class="btn btn-success">Show</button>
                                </a>
                                <a href="{{ path('order_edit', {'id': order.id}) }}">
                                    <button class="btn btn-warning">Edit</button>
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="15">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <a href="{{ path('order_new') }}" class="btn btn-primary">Create new</a>

                 {% include 'pagination.html.twig' %}

            </div>
            <div class="col-2">

            </div>
        </div>
    </div>

    {% include 'footer.html.twig' %}
{% endblock %}
