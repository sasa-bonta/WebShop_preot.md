<form method="post" action="{{ path('product_delete', {'code': product.code}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.code) }}">
    <p align="center">
        <button class="btn btn-dark">Delete</button>
    </p>
</form>
