{% extends 'base.html.twig' %}

{% block title %} Products {% endblock %}

{% block navbar %} {% include 'admin/admin_header.html.twig' %} {% endblock %}

{% block body %}

    <style>
        a {
            text-decoration: none;
        }
        .pagination {
            justify-content: center;
        }

        .page-link {
            color: black;
            background: none;
            border: 1px black solid;
        }

        .page-link:hover {
            color: white;
            background: black;
        }
    </style>

    {% include 'admin/admin_header.html.twig' %}
    {% include 'admin/navbar_admin_products.html.twig' %}
    <br>
    <h1 align="center">Products list</h1>
    <div class="container">
        <div class="row my-3">
            <div class="col-9">
                <table class="table table-striped table-condensed">
                    <thead>
                    <tr>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Created at</th>
                        <th>Updated at</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                        <tr>
                            <td>{{ product.code }}</td>
                            <td>{{ product.name }}</td>
                            <td>{{ product.category }}</td>
                            <td>{{ product.price| number_format(2) }}</td>
                            <td>{{ product.createdAt|date('d-m-Y') }}</td>
                            <td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d') : '---' }}</td>
                            <td>
                                <a href="{{ path('product_show_detailed', { 'code': product.code }) }}">
                                    <button class="btn btn-success">Show</button>
                                </a>
                                <a href="{{ path('product_edit', { 'code': product.code }) }}">
                                    <button class="btn btn-warning">Edit</button>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <a href="{{ path('product_new') }}" class="btn btn-primary">Add new product</a>

                <nav aria-label="...">
                    <ul class="pagination">
                        {% if length > 0 %}
                            {% for i in 1..(length / limit)|round(0,'ceil') %}
                                <li class="page-item">
                                    <button class="page-link" type="submit" value="{{ i }}"
                                            onclick="setPage(this.value)">{{ i }}
                                    </button>
                                </li>
                            {% endfor %}
                        {% endif %}
                    </ul>
                </nav>

            </div>

            <div class="col-3">
                <h2>Categories</h2>
                <ul class="list-group">
                    {% for category in categories %}
                        <li class="list-group-item">
                            <button type="submit" value="{{ category | lower }}"
                                    style="background: none;border: none"
                                    onclick="setCategory(this.value)">{{ category | capitalize }}
                            </button>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

    {% include 'footer.html.twig' %}

    <script>
        function setCategory(value) {
            var urlSearchParams = new URLSearchParams(window.location.search);
            urlSearchParams.set('category', value);
            urlSearchParams.set('page', 1);
            window.location.search = urlSearchParams;
        }

        function setPage(value) {
            var urlSearchParams = new URLSearchParams(window.location.search);
            urlSearchParams.set('page', value);
            window.location.search = urlSearchParams;

            var element = document.querySelectorAll("button[value=" + value + "]");
            element.style.transform = "background: black;";
        }
    </script>
{% endblock %}