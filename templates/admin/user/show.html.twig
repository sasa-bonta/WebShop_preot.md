{% extends 'admin/crud_base.thml.twig' %}

{% block title %} User {% endblock %}

{% block navbar %} {% include 'admin/navbar_admin_users.html.twig' %} {% endblock %}

{% block content %}
    <h1 align="center">User</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>Username</th>
            <td>{{ user.username }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Activated</th>
            <td>{% if user.activated == 1 %}
                    true
                {% else %}
                    false
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>Roles</th>
            <td>
                {% for role in user.roles %}
                    {{ role | replace ({'ROLE_' : ' '}) }}
                {% endfor %}
            </td>
        </tr>
        </tbody>
    </table>

    <p align="center">
        <a href="{{ path('user_index') }}">
            <button class="btn btn-primary">Back to list</button>
        </a>
    </p>
    <br>
    {% if user.username != 'sasa' %}
        <p align="center">
            <a href="{{ path('user_edit', {'id': user.id}) }}">
                <button class="btn btn-success">Edit</button>
            </a>
        </p>
        {{ include('admin/user/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
