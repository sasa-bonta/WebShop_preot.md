{% extends 'base.html.twig' %}

{% block title %} User index {% endblock %}

{% block body %}
    <style>
        a {
            text-decoration: none;
        }

        .pagination {
            justify-content: center;
        }

        .page-link {
            color: black;
            background: none;
            border: 1px black solid;
        }

        .page-link:hover {
            color: white;
            background: black;
        }
    </style>
    {% include 'admin/admin_header.html.twig' %}
    {% include 'admin/navbar_admin_users.html.twig' %}

    <br>
    <h1 align="center">User index</h1>
    <div class="container">


        <div class="row my-3">
            <div class="col-2">
            </div>
            <div class="col-8">
                <table class="table table-striped table-condensed">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Activated</th>
                        <th>Roles</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.username }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.activated ? 'true' : 'false' }}
                            </td>
                            <td>
                                {% for role in user.roles %}
                                    {{ role | replace ({'ROLE_' : ' '}) }}
                                {% endfor %}
                            </td>
                            <td>
                                <a href="{{ path('user_show', {'id': user.id}) }}">
                                    <button class="btn btn-success">Show</button>
                                </a>
                                {% if user.username != 'sasa' %}
                                    <a href="{{ path('user_edit', {'id': user.id}) }}">
                                        <button class="btn btn-warning">Edit</button>
                                    </a>
                                {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <a href="{{ path('user_new') }}" class="btn btn-primary">Create new</a>

                {% include 'pagination.html.twig' %}

            </div>
            <div class="col-2">

            </div>
        </div>
    </div>

    {% include 'footer.html.twig' %}
    <script src="{{ asset('assets/main/js/script.js') }}" type="text/javascript"></script>
{% endblock %}
