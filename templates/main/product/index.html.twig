{% extends 'base.html.twig' %}

{% block body %}
    <header id="header">
        <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active" data-bs-interval="5000">
                    <img class="img-fluid" src="{{ asset('assets/main/images/1.jpg') }}" width="2000" alt="1">
                </div>
                <div class="carousel-item" data-bs-interval="5000">
                    <img class="img-fluid" src="{{ asset('assets/main/images/2.jpg') }}" width="2000" alt="2">
                </div>
                <div class="carousel-item" data-bs-interval="5000">
                    <img class="img-fluid" src="{{ asset('assets/main/images/3.jpg') }}" width="2000" alt="3">
                </div>
            </div>
        </div>
    </header>

    <div id="content">
        {% include 'navbar.html.twig' %}

        <div class="container">
            <div class="row my-5">
                <div class="col-9">
                    <table class="table">
                        <tbody>
                        {% for product in products %}

                            {% if loop.index0 % 4 == 0 %}
                                <tr>
                                <td>
                                    <a href="../products/{{ product.code }}"
                                       style="text-decoration: none; color: black">
                                        <div class="image">
                                            <img src="{{ asset(product.imgPath) }}" width="200" height="200"
                                                 alt="Image 1">
                                        </div>
                                        <div class="name">
                                            <b>{{ product.name }}</b>
                                        </div>
                                        <div class="price">
                                            {{ product.price }} $
                                        </div>
                                    </a>
                                </td>
                            {% else %}
                                <td>
                                    <a href="../products/{{ product.code }}"
                                       style="text-decoration: none; color: black">
                                        <div class="image">
                                            <img src="{{ asset(product.imgPath) }}" width="200" height="200"
                                                 alt="Image 1">
                                        </div>
                                        <div class="name">
                                            <b>{{ product.name }}</b>
                                        </div>
                                        <div class="price">
                                            {{ product.price }} $
                                        </div>
                                    </a>
                                </td>
                            {% endif %}
                        {% else %}
                            <tr>
                                <td colspan="9">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                    <nav aria-label="...">
                        <ul class="pagination">

{#                            {% if limit == 32 %}#}
{#                                <li class="page-item">#}
{#                                    <button class="page-link" type="submit" value="1"#}
{#                                            style="background: none;border: none"#}
{#                                            onclick="setPage(this.value)">1#}
{#                                    </button>#}
{#                                </li>#}
{#                            {% endif %}#}




{#                            {% if limit == 16 %}#}
