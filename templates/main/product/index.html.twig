{% extends 'base.html.twig' %}

{% block body %}

    <header id="header">
        <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active" data-bs-interval="5000">
                    <img class="img-fluid" src="{{ asset('assets/main/images/1.jpg') }}" width="2000" alt="1">
                </div>
                <div class="carousel-item" data-bs-interval="5000">
                    <img class="img-fluid" src="{{ asset('assets/main/images/2.jpg') }}" width="2000" alt="2">
                </div>
                <div class="carousel-item" data-bs-interval="5000">
                    <img class="img-fluid" src="{{ asset('assets/main/images/3.jpg') }}" width="2000" alt="3">
                </div>
            </div>
        </div>
    </header>

    <div id="content">
        {% include 'navbar.html.twig' %}

        <div class="container">
            <div class="row my-5">
                <div class="col-9">
                    <table class="table">
                        <tbody>
                        {% for product in products %}
                            {% set fullImagePath = 'assets/main/images/gallery/' %}
                            {% set fullImagePath = fullImagePath ~ product.imgPath|first %}
                            {% if loop.index0 % 4 == 0 %}
                                <tr>
                                <td>
                                    <a href="../products/{{ product.code }}"
                                       style="text-decoration: none; color: black">
                                        <div class="image">
                                            <img src="{{ asset(fullImagePath) }}" width="200" height="200"
                                                 alt="Image 1">
                                        </div>
                                        <div class="name">
                                            <b>{{ product.name }}</b>
                                        </div>
                                        <div class="price">
                                            {{ product.price | number_format(2) }} $
                                        </div>
                                    </a>
                                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                                        <button id="add-to-cart{{ loop.index0 }}"
                                                class="add-to-cart btn btn-success btn-sm"
                                                data-productCode="{{ product.code }}">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                                 fill="currentColor"
                                                 class="bi bi-cart-fill" viewBox="0 0 16 16">
                                                <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                                            </svg>
                                            Add
                                        </button>
                                    {% else %}
                                        <a href="{{ path('app_login') }}">
                                            <button class="btn btn-success btn-sm">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                                     fill="currentColor"
                                                     class="bi bi-cart-fill" viewBox="0 0 16 16">
                                                    <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                                                </svg>
                                                Add
                                            </button>
                                        </a>
                                    {% endif %}
                                </td>
                            {% else %}
                                <td>
                                    <a href="../products/{{ product.code }}"
                                       style="text-decoration: none; color: black">
                                        <div class="image">
                                            <img src="{{ asset(fullImagePath) }}" width="200" height="200"
                                                 alt="Image 1">
                                        </div>
                                        <div class="name">
                                            <b>{{ product.name }}</b>
                                        </div>
                                        <div class="price">
                                            {{ product.price }} $
                                        </div>
                                    </a>
                                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                                        <button id="add-to-cart{{ loop.index0 }}"
                                                class="add-to-cart btn btn-success btn-sm"
                                                data-productCode="{{ product.code }}">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                                 fill="currentColor"
                                                 class="bi bi-cart-fill" viewBox="0 0 16 16">
                                                <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                                            </svg>
                                            Add
                                        </button>
                                    {% else %}
                                        <a href="{{ path('app_login') }}">
                                            <button class="btn btn-success btn-sm">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                                     fill="currentColor"
                                                     class="bi bi-cart-fill" viewBox="0 0 16 16">
                                                    <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                                                </svg>
                                                Add
                                            </button>
                                        </a>
                                    {% endif %}
                                </td>
                            {% endif %}
                        {% else %}
                            <tr>
                                <td colspan="9">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                    {% include 'pagination.html.twig' %}

                </div>
                <div class="col-3">
                    <h2>Categories</h2>
                    <ul class="list-group">
                        {% for category in categories %}
                            <li class="list-group-item">
                                <button type="submit" value="{{ category | lower }}"
                                        style="background: none;border: none"
                                        onclick="setCategory(this.value)">{{ category | capitalize }}
                                </button>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>

        {% include 'footer.html.twig' %}
    </div>
{% endblock %}

